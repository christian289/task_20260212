{
  "permissions": {
    "allow": [
      "Bash(git -C \"C:\\\\Users\\\\chris\\\\source\\\\repos\\\\task_20260212\" log --oneline -5)",
      "Bash(node:*)",
      "Bash(git rm:*)",
      "Bash(git commit:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
